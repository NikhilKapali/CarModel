<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/layout_header">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type and Run"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make"
        android:id="@+id/txt_make"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/ed_car"
        android:textSize="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:textSize="15dp"
        android:id="@+id/txt_year"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="40dp"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:id="@+id/ed_year"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colour"
        android:textSize="15dp"
        android:id="@+id/txt_colour"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="40dp"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:id="@+id/ed_colour"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Price"
        android:textSize="15dp"
        android:id="@+id/txt_price"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="40dp"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:id="@+id/ed_price"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine Size"
        android:textSize="15dp"
        android:id="@+id/txt_size"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="40dp"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:id="@+id/ed_size"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Car"
        android:id="@+id/btn_create"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="100dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15dp"
        android:id="@+id/txt_result"
        style="@style/layout_display"
        android:layout_marginTop="390dp"
        />
</RelativeLayout>
    </ScrollView>